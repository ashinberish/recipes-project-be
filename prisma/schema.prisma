generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//* Users Master table Models *//

model tbl_users {
  id          Int        @id @default(autoincrement())
  email       String?    @unique
  name        String?
  dob         String?
  sys_role    Role       @default(USER)
  init_setup  Boolean?   @default(false)
  last_login  DateTime?  @db.Timestamptz(3)
  created_at  DateTime?  @default(now()) @db.Timestamptz(3)
  updated_at  DateTime?  @updatedAt @db.Timestamptz(3)
  disabled_at DateTime?  @db.Timestamptz(3)
  is_deleted  Boolean    @default(false)
  tbl_auth    tbl_auth[]
}

enum Role {
  ADMIN
  USER
  DEV
  OWNER
}

model tbl_auth {
  id            Int       @id @default(autoincrement())
  user          tbl_users @relation(fields: [user_id], references: [id])
  user_id       Int
  refresh_token String?
  password      String
  expiry_at     DateTime? @db.Timestamptz(3)
  updated_at    DateTime? @updatedAt @db.Timestamptz(3)
}
